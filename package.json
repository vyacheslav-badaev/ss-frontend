{
  "private": true,
  "engines": {
    "node": ">=11.0.0"
  },
  "name": "shortstories-frontend",
  "version": "1.0.0",
  "description": "Frontend for shortstories.io",
  "main": "server.js",
  "repository": "https://github.com/shortstories-project/shortstories",
  "keywords": [
    "react",
    "next",
    "postcss"
  ],
  "author": "Shashkov Danil <shashkovdanil@gmail.com> (https://github.com/shashkovdanil)",
  "license": "MIT",
  "scripts": {
    "start:dev": "NODE_ENV=development node server.js",
    "build:prod": "next build",
    "start:prod": "NODE_ENV=production node server.js"
  },
  "dependencies": {
    "@sindresorhus/slugify": "^0.9.1",
    "@zeit/next-css": "^1.0.2-canary.2",
    "apollo-boost": "^0.3.1",
    "apollo-upload-client": "^10.0.0",
    "classnames": "^2.2.6",
    "compression": "^1.7.4",
    "date-fns": "^1.30.1",
    "dotenv": "^7.0.0",
    "downshift": "^3.2.7",
    "final-form": "^4.12.0",
    "graphql": "^14.2.1",
    "graphql-tag": "^2.10.1",
    "isomorphic-unfetch": "^3.0.0",
    "nanoid": "^2.0.1",
    "next": "^8.1.0",
    "next-cookies": "^1.1.2",
    "next-with-apollo": "^3.4.0",
    "nprogress": "^0.2.0",
    "polka": "^0.5.2",
    "ramda": "^0.26.1",
    "react": "^16.8.6",
    "react-adopt": "^0.6.0",
    "react-apollo": "^2.5.4",
    "react-dom": "^16.8.6",
    "react-dropzone": "^10.1.3",
    "react-final-form": "^4.1.0",
    "react-image-crop": "^7.0.1",
    "react-onclickoutside": "^6.8.0",
    "react-textarea-autosize": "^7.1.0",
    "reading-time": "^1.2.0",
    "sw-precache-webpack-plugin": "^0.11.5"
  },
  "devDependencies": {
    "babel-eslint": "9.0.0",
    "cssnano": "^4.1.10",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-react-app": "^3.0.8",
    "eslint-plugin-flowtype": "2.50.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.6.0",
    "next-size": "^2.0.2",
    "postcss-easy-import": "^3.0.0",
    "postcss-global-import": "^1.0.6",
    "postcss-nested": "^4.1.2",
    "postcss-preset-env": "^6.6.0",
    "prettier": "^1.16.4",
    "stylelint": "^9.10.1",
    "stylelint-config-recess-order": "^2.0.1",
    "stylelint-config-standard": "^18.2.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "prettier",
      "prettier/react"
    ],
    "plugins": [
      "prettier",
      "react-hooks"
    ],
    "rules": {
      "prettier/prettier": "error",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "jsx-a11y/anchor-is-valid": [
        "warn",
        {
          "aspects": [
            "invalidHref"
          ]
        }
      ]
    }
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "jsxBracketSameLine": false,
    "arrowParens": "avoid"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recess-order"
    ],
    "ignoreFiles": [
      "**/*.js"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "global-import"
          ]
        }
      ]
    }
  }
}
